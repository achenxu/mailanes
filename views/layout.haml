!!! 5
%html
  %head
    %title= title
    %meta{charset:'UTF-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %meta{name: 'keywords', content: 'email newsletter marketing'}
    %meta{name: 'description', content: 'Email sending toolkit'}
    %link{href: 'https://cdn.rawgit.com/yegor256/tacit/gh-pages/tacit-css.min.css', rel: 'stylesheet'}
    %link{href: 'https://www.yegor256.com/css/icons.css', rel: 'stylesheet'}
    %link{rel: 'shortcut icon', href: url('/logo-64.png')}
    :css
      .logo { width: 64px; height: 64px; }
      .small { font-size: .8em; line-height: 1.2em; }
      .gray { color: gray; }
      .red { color: #A22522; }
      .cross { text-decoration: line-through; }
  %body
    %section
      %header
        %nav
          %ul
            %li
              %a{href: url('/')}
                %img.logo{src: url('/logo.svg')}
        %nav
          %ul
            %li
              - if defined? user
                %a{href: '/home'}
                  = "@#{user[:login]}"
              - else
                %a{href: login_link}
                  Login
            - if defined? user
              %li
                %a{href: url('/lists')}
                  Lists
              %li
                %a{href: url('/lanes')}
                  Lanes
              %li
                %a{href: url('/campaigns')}
                  Campaigns
              %li
                %a{href: '/logout'}
                  Logout
      %article
        = yield
      %footer.small.gray
        %nav
          %ul
            %li
              &copy; 2018 Mailanes
        %nav
          %ul
            %li
              = "v#{ver}"
            %li
              %a{href: 'https://iplocation.com/?ip=' + request_ip}
                = request_ip
